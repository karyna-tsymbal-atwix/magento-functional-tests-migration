<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertSwatchAttributeOptionsOnProductListIsVisibleActionGroup">
        <annotations>
            <description>Go to the category page with configurable product and observe an element which contains product swatches</description>
        </annotations>
        <arguments>
            <argument name="category"/>
        </arguments>
        <!--Go to category page-->
        <amOnPage url="{{StorefrontCategoryPage.url(category.name)}}" stepKey="amOnCategoryWithConfigurableProductPage"/>
        <waitForPageLoad stepKey="waitForConfigurableProductPage"/>
        <!-- See a block with swatches -->
        <seeElement selector="{{StorefrontProductInfoMainSection.swatchAttributeOptionsOnList}}" stepKey="seeElementWithSwatches"/>
    </actionGroup>
</actionGroups>
